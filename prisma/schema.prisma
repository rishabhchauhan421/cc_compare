generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URI")
}


model CreditCard{
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  slug      String @unique

  brand      Brand

}

enum Brand{
  VISA
  MASTERCARD
  AMEAMERICAN_EXPRESSX
  RUPAY
  DINERS
  DISCOVER
  JCB
  UNIONPAY
  MAESTRO
  ELO
  HIPERCARD
  HIPER
  AURA
}
